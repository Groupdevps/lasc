# etapa de producci√≥n
FROM nginx:1.19.7 
COPY ./dist /usr/share/nginx/html

COPY entrypoint.sh /
COPY default.conf /etc/nginx/conf.d/
RUN chmod +x /entrypoint.sh
EXPOSE 80
EXPOSE 8080
ENTRYPOINT [ "/entrypoint.sh" ]
